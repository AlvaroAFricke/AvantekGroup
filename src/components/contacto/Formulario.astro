---
// src/components/ContactForm.astro
import Data from "../../DATA/data-es.json";
---

<section class="max-w-5xl mx-auto my-12 px-6 py-10 bg-white rounded-2xl shadow-2xl animate-fadeIn transition-all duration-500 ease-in-out">
  <h2 class="text-center text-4xl md:text-5xl font-bold mb-10 text-orange-400 drop-shadow-lg">
    Contáctanos
  </h2>

  <form id="contactForm" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="flex flex-col">
        <label for="cliNombre" class="text-gray-700 font-medium mb-1">
          {Data.Contacto.nombre}
        </label>
        <input
          type="text"
          name="nombre"
          placeholder="Tu nombre"
          class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none"
        />
      </div>

      <div class="flex flex-col">
        <label for="cliApellido" class="text-gray-700 font-medium mb-1">
          {Data.Contacto.apellido}
        </label>
        <input
          type="text"
          name="apellido"
          placeholder="Tu apellido"
          class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none"
        />
      </div>

      <div class="flex flex-col">
        <label for="cliEmpresa" class="text-gray-700 font-medium mb-1">
          {Data.Contacto.empresa}
        </label>
        <input
          type="text"
          name="empresa"
          placeholder="Nombre de tu empresa"
          class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none"
        />
      </div>

      <div class="flex flex-col">
        <label for="cliAsunto" class="text-gray-700 font-medium mb-1">
          {Data.Contacto.asunto}
        </label>
        <input
          type="text"
          name="asunto"
          placeholder="Tu asunto"
          class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none"
        />
      </div>
    </div>

    <div class="flex flex-col">
      <label for="cliEmail" class="text-gray-700 font-medium mb-1">
        {Data.Contacto.correo}
      </label>
      <input
        type="email"
        name="email"
        placeholder="correo@ejemplo.com"
        class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none"
      />
    </div>

    <div class="flex flex-col">
      <label for="cliMensaje" class="text-gray-700 font-medium mb-1">
        {Data.Contacto.mensaje}
      </label>
      <textarea
        name="mensaje"
        rows="5"
        placeholder="Escribí tu mensaje aquí..."
        class="rounded-lg border border-gray-300 p-3 bg-gray-100 focus:ring-2 focus:ring-sky-300 focus:outline-none resize-none"
      ></textarea>
    </div>

    <div class="text-center pt-4">
      <button
        type="submit"
        class="bg-orange-300 hover:bg-orange-400 text-white font-semibold px-6 py-3 rounded-xl transition-transform transform hover:scale-105 duration-300"
      >
        {Data.Contacto.boton}
      </button>
    </div>
  </form>
</section>

<script src="../../scripts/mailer.js" defer></script>
